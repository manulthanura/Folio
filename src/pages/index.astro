---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Project from '../components/Project.astro';
import Contact from '../components/Contact.astro';
import Frame from '../components/Frame.astro';
---

<Layout>
  <main>
    <div class="h-screen bg-black text-white p-4"> 
      <div class="slider-container">
          <Hero/>
          <About/>
          <Project/>
          <Contact/>
      </div>
      <Frame/>
    </div> 
  </main>
</Layout>

<script is:inline>
  // Get the slider container element
  const sliderContainer = document.querySelector('.slider-container');

  // Get all the slider slide elements
  const sliderSlides = document.querySelectorAll('.slider-slide');

  // Get the next and previous buttons
  const nextButton = document.querySelector('.slider-next');
  const previousButton = document.querySelector('.slider-previous');

  // Set the initial slide index
  let currentSlideIndex = 0;

  // Function to show the current slide
  const showSlide = (index) => {
    // Hide all the slides
    sliderSlides.forEach((slide) => {
      slide.style.display = 'none';
    });

    // Show the current slide
    sliderSlides[index].style.display = 'block';
  };

  // Function to handle the next slide
  const nextSlide = () => {
    currentSlideIndex++;

    // Wrap around to the first slide if at the end
    if (currentSlideIndex >= sliderSlides.length) {
      currentSlideIndex = 0;
    }

    showSlide(currentSlideIndex);
  };

  // Function to handle the previous slide
  const previousSlide = () => {
    currentSlideIndex--;

    // Wrap around to the last slide if at the beginning
    if (currentSlideIndex < 0) {
      currentSlideIndex = sliderSlides.length - 1;
    }

    showSlide(currentSlideIndex);
  };

  // Show the initial slide
  showSlide(currentSlideIndex);

  // Add event listeners to the next and previous buttons for navigation
  nextButton.addEventListener('click', nextSlide);
  previousButton.addEventListener('click', previousSlide);
</script>