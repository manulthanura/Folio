---
import Container from "./Container.astro"
import projects from "./collections/projects.json";
---

<Container>
    <h2 class="text-3xl text-center md:text-5xl md:text-left md:mt-12 text-primary tracking-loose font-bold">Projects</h2>
    <div class="divide-y divide-primary mt-4">
        <div>
            {
            projects.map(({no, title, link}) => (
            <div class="flex items-center justify-between w-full p-5 font-medium text-white border-b-4 border-primary dark:border-primary gap-3 text-sm md:text-xl">
                <h3>{no}</h3>
                <h3>{title}</h3>
                <a href={link} class="justify-end">
                    <svg class="w-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
					</svg>
                </a>
            </div>
            ))
            }
        </div>
    </div>
</Container>